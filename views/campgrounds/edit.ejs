<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Edit <%=campground.name%></h2>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="campground[description]" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <label for="price">Cost (per night)</label>
                    <div class="input-group-prepend">
                        <span class="input-group-text">Â£</span>
                        <input class="form-control" id="price" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-default btn-block btn-primary indexBtn">Update!</button>
                </div>
            </form>
            <form class="form-signin pt-0">
                <a class="form-group btn btn-sm btn-block backLink" href="/campgrounds/<%=campground._id%>">Cancel Update</a>
            </form>
        </div>
    </div>

<% include ../partials/footer %>