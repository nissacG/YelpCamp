<% include ../partials/header %>

<div class="container">
   <div class="row">
      <div class="col-md-3">
         <p class="lead">YelpCamp</p>
         <div class="list-group">
            <l1 class="list-group-item active">Info 1</l1>
            <l1 class="list-group-item">Info 2</l1>
            <l1 class="list-group-item">Info 3</l1>
         </div>
      </div> 
      <div class="col-md-9">
         <div class="thumbnail">
            <img class="img-responsive" src="<%=campground.image%>">
            <div class="caption">
               <h4 class="pull-right">Â£<%=campground.price%>per night</h4>
               <h4><a href=""><%=campground.name%></a></h4>
               <p><%=campground.description%></p>
               <h6><em><a href="">Submitted by: <%=campground.author.username%></a></em></h6>
               <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                  <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                  <form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                       <button class="btn btn-xs btn-danger">Delete</button>
                  </form>
               <% } %>
            </div>
         </div>
         <div class="well">
            <div class="text-right">
               <a class="btn btn-sm btn-info" href="/campgrounds/<%=campground._id%>/comments/new">LEAVE COMMENT</a>
            </div>
            <% campground.comments.forEach(function(comment){ %>
            <hr>
            <div class="row">
               <div class="mol-md-12">
                  <strong><%=comment.author.username%></strong>
                  <span class ="pull-right"> 10 days ago</span>
                  <p><%=comment.text%></p>
                  <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                     <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                     <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                          <button class="btn btn-xs btn-danger">Delete</button>
                     </form>
                  <% } %>
               </div>
            </div>
            <% }) %>
         </div>
      </div>
   </div>
</div>
<% include ../partials/footer %>