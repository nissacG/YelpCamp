<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Edit Comment</h2>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4 mt-2">
            <form  action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT"method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block btn-primary indexBtn">Submit!</button>
                </div>
            </form>
            <a class="btn btn-sm btn-block backLink" href="/campgrounds/<%=campground_id%>">Back to Campground</a>
        </div>
    </div>

<% include ../partials/footer %>