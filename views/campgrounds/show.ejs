<% include ../partials/header %>

   <div class="row">
      <div class="col-md-3">
         <div class="list-group box-shadow">
            <l1 class="list-group-item active">Info 1</l1>
            <l1 class="list-group-item">Info 2</l1>
            <l1 class="list-group-item">Info 3</l1>
         </div>
      </div> 
      <div class="col-md-9">
         <div class="card box-shadow">
            <img class="card-img-top images" src="<%=campground.image%>" alt="Responsive image">
            <div class="card-body">
               <p class="float-right">Â£<%=campground.price%>/night</p>
               <h5 class="card-title"><%=campground.name%></h5>
               <p><em>Submitted by: <%=campground.author.username%></em></p>
               <hr>
               <p class="card-text"><%=campground.description%></p>
               <div class="float-right">
                  <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                  <a class="btn btn-sm btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                  <form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                       <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                  <% } %>
               </div>
            </div>
         </div>
         <div class="card mt-2 mb-2 p-2 box-shadow">
            <div class="text-left">
               <a class="btn btn-sm btn-info box-shadow--2dp" id="leave" href="/campgrounds/<%=campground._id%>/comments/new">LEAVE COMMENT</a>
            </div>
            <% campground.comments.forEach(function(comment){ %>
            <div class="card-text">
               <div class="col-md-12">
                  <strong><%=comment.author.username%></strong>
                  <span class ="float-right"> 10 days ago</span>
                  <div>
                     <%=comment.text%>
                     <div class="float-right">
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                           <a class="btn btn-sm btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                           <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                           </form>
                        <% } %>
                     </div>
                     <hr>
                  </div>
               </div>
            </div>
            <% }) %>
         </div>
      </div>
   </div>

<% include ../partials/footer %>