<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h2 style="text-align: center">Edit Comment</h2>
        <div style="width: 50%; margin: 20px auto">
            <form  action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT"method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-block btn-default btn-primary">Submit!</button>
                </div>
            </form>
            <a class="btn btn-sm btn-block btn-default btn-secondary" href="/campgrounds/<%=campground_id%>">Back to Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>