<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Add New Comment to <%=campground.name %></h2>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4 mt-2">
            <img class="img-thumbnail mb-3" src="<%=campground.image%>">
            <form  action="/campgrounds/<%=campground._id%>/comments"method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block btn-primary indexBtn">Submit!</button>
                </div>
            </form>
        <a class="btn btn-sm btn-block backLink" href="/campgrounds/<%=campground._id%>">Back to Campground</a>
        </div>
    </div>

<% include ../partials/footer %>